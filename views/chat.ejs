<!DOCTYPE html>
<html lang="en">
  <head>
    <% if (locals.user) { %> <%- include('./partials/header'); %> <% } %>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script
      src="https://kit.fontawesome.com/5833c2855b.js"
      crossorigin="anonymous"
    ></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="../css/index.css" />
    <title>Чат</title>
    <!-- Подключаем Socket.IO -->
    <script src="/socket.io/socket.io.js"></script>
    <!-- Подключаем Moment.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <script>
      // Инициализируем Socket.IO на клиенте
      const socket = io();

      // Обработчик отправки сообщения
      const sendMessage = () => {
        const messageInput = document.getElementById("messageInput");
        const message = messageInput.value;

        // Отправляем сообщение с именем пользователя на сервер
        socket.emit("chat message", {
          message: message,
          username: "<%= username %>",
        });

        messageInput.value = "";
      };

      socket.on("chat message", (msg) => {
        const messagesList = document.getElementById("messagesList");
        const li = document.createElement("li");
        // Формируем текст сообщения с именем пользователя и временем
        li.textContent = `${msg.username} (${formatTime(msg.time)}): ${
          msg.text
        }`;
        messagesList.appendChild(li);
      });

      // Функция для форматирования времени с помощью Moment.js
      function formatTime(timeString) {
        return moment(timeString).format("HH:mm:ss"); // Формат времени по вашему желанию
      }
    </script>
  </head>
  <body>
    <h1>Чат</h1>
    <ul id="messagesList"></ul>
    <input type="text" id="messageInput" />
    <button onclick="sendMessage()">Отправить</button>
  </body>
</html>

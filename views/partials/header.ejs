<nav class="navbar navbar-expand-lg bg-body-tertiary">
  <a class="navbar-brand" href="/">VibeCircle </a>

  <% if(locals.user) { %>
  <div id="menu">
    <% if (locals.user.role !== "guest") { %>
    <img
      src="/avatars/<%= user.avatar %>"
      onerror="this.onerror=null;this.src='img/ava.jpg';"
      alt="Аватар"
      style="width: 30px; height: 30px; border-radius: 50%; margin-right: 10px"
    />

    <h6 style="margin-top: 10px; margin-right: 10px; min-width: max-content">
      Здравствуйте, <span class="name"><%= locals.user.name %></span>!
    </h6>

    <% } else { %>
    <h6 style="margin-right: 15px">
      Вы вошли как <span class="name"> <%= locals.user.name %></span>
    </h6>
    <% } %>
    <a id="a2" class="badge rounded-pill" href="/logout">Выход</a>
  </div>
  <% } else { %>
  <!-- Меню для анонимных пользователей -->
  <div id="menu">
    <a id="sub" class="badge rounded-pill" href="/login">Вход</a>
    <a id="a3" class="badge rounded-pill" href="/register">Регистрация</a>
  </div>
  <% } %>
</nav>
<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
  crossorigin="anonymous"
></script>
